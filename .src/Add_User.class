Public Sub Form_Show()

  Dim res As Result
  
  res = Global.DBConn.Find("users")
  
  For Each res
    ListBox1.Add(res!name, res!id)
    
  Next

End

Public Sub Button1_Click()

  Dim res As Result
  
  res = Global.DBConn.Create("users")
  res!name = TextBox1.Text
  res!date = Now
  res.Update
  Global.DBConn.Commit
  Me.Close
  
End

Public Sub Button2_Click()

  Me.Close
  

End
